@model IEnumerable<OnlineStore.Models.Category>

@{
    ViewBag.Title = "Display Categories";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container mt-5">
    <h2 class="text-center text-white bg-success p-3">Categories List</h2>

    <div class="table-responsive mt-3">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(C => C.CategoryId)</th>
                    <th>@Html.DisplayNameFor(C => C.CategoryName)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var category in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(C => category.CategoryId)</td>
                            <td>@Html.DisplayFor(C => category.CategoryName)</td>
                            <td class="text-center">
                                @Html.ActionLink("Edit", "EditCategory", new { categoryId = category.CategoryId }, new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink("Delete", "DeleteCategory", new { categoryId = category.CategoryId },
                                new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this record?')" })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No categories found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("Add New Category", "AddCategory", null, new { @class = "btn btn-success btn-lg" })
    </div>
</div>

<style>
    
    .container {
        max-width: 800px;
        margin: auto;
    }

    h2 {
        border-radius: 5px;
    }

    .table {
        margin-top: 20px;
        background-color: #ffffff;
    }

    .table thead th {
        text-align: center;
    }

    .table tbody td {
        vertical-align: middle;
    }

    .btn{
       margin: 0 5px;
    }

</style>
