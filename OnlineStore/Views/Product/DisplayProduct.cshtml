@model OnlineStore.Models.Product

@{
    ViewBag.Title = "Display Product";
}

<div class="container mt-5">
    <h2 class="text-center p-3" style="background-color: yellowgreen; color: orangered;">
        Display Product
    </h2>

    <div class="row mt-4">
        <div class="col-md-4 text-center">
            <img src="~/Uploads/@Model.ProductImageName" class="img-fluid img-thumbnail" alt="Product Image" style="max-height: 300px;">
        </div>

        <div class="col-md-8">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Product ID</th>
                        <td>@Model.ProductId</td>
                    </tr>
                    <tr>
                        <th>Product Name</th>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <th>Unit Price</th>
                        <td>@Model.UnitPrice</td>
                    </tr>
                    <tr>
                        <th>Category ID</th>
                        <td>@Model.CategoryId</td>
                    </tr>
                    <tr>
                        <th>Category Name</th>
                        <td>@Model.Category.CategoryName</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center mt-3">
                @Html.ActionLink("Back to Product List", "DisplayProducts", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>
